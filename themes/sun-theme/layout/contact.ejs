<h2>留言板</h2>
<input id="name" placeholder="姓名">
<input id="email" placeholder="邮箱">
<textarea id="msg" placeholder="留言内容"></textarea>
<button id="send">提交</button>

<script>
document.getElementById("send").onclick = async () => {
  const res = await fetch("https://blog-source-lime.vercel.app/api/submitForm", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      name: name.value,
      email: email.value,
      message: msg.value
    })
  });
  const data = await res.json();
  alert(data.success ? "已提交！" : "提交失败：" + data.error);
};
</script>
